---
import type { HTMLAttributes } from 'astro/types'

interface Props extends HTMLAttributes<'svg'> {
  primary: string
  secondary?: string
}

const { primary, secondary, ...props } = Astro.props
---

<svg viewBox="0 0 1000 1000" {...props}>
  <rect class="bg"></rect>
  <text x="50%" y="45%" class="primary">{primary.substring(0, 15)}</text>
  <text x="50%" y="60%" class="secondary">{secondary?.substring(0, 25)}</text>
  <style>
    :root {
      text-anchor: middle;
    }

    .bg {
      width: 100%;
      height: 100%;
      fill: #ccc;
    }

    text.primary {
      font: 700 60px sans-serif;
      fill: #333;
    }

    text.secondary {
      font: 400 30px sans-serif;
      fill: #555;
    }
  </style>
</svg>
