---
import type { HTMLAttributes } from 'astro/types'

interface Props extends HTMLAttributes<'svg'> {
  title?: string
  subtitle?: string
}

const { title, subtitle, ...props } = Astro.props
---

<svg viewBox="0 0 1200 630" {...props}>
  <rect class="bg"></rect>
  <text x="50%" y="45%" class="title">{title?.substring(0, 15)}</text>
  <text x="50%" y="60%" class="subtitle">{subtitle?.substring(0, 25)}</text>
  <style>
    :root {
      text-anchor: middle;
    }

    .bg {
      width: 100%;
      height: 100%;
      fill: #ccc;
    }

    .title {
      font: 700 70px sans-serif;
      fill: #333;
    }

    .subtitle {
      font: 400 40px sans-serif;
      fill: #555;
    }
  </style>
</svg>
