---
import BaseLayout from '@/layouts/Base.astro'
---

<BaseLayout title="CMS">
  <meta name="robots" content="noindex, nofollow" slot="head" />
  <div id="nc-root"></div>
</BaseLayout>

<script>
  import config from './config'
  import CMS from 'decap-cms-app'
  import React from 'react'
  import globalStyle from '@/styles/global.css?url'
  import mdStyle from '@/styles/markdown.css?url'
  CMS.registerPreviewStyle(globalStyle)
  CMS.registerPreviewStyle(mdStyle)
  CMS.registerPreviewTemplate('posts', props => React.createElement('article', null, props.widgetFor('body')))
  CMS.registerPreviewTemplate('pages', props => React.createElement('article', null, props.widgetFor('body')))
  CMS.init({ config })
</script>
