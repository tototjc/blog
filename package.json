{
  "name": "astro-blog",
  "type": "module",
  "version": "0.0.8",
  "scripts": {
    "dev": "astro dev",
    "build": "astro check && astro build",
    "preview": "astro preview",
    "check": "astro check",
    "lint": "pnpm run \"/^lint:.*/\"",
    "lint:es": "eslint --cache",
    "lint:ts": "tsc --noEmit",
    "lint:css": "stylelint --cache \"**/*.{css,astro}\"",
    "lint:prettier": "prettier --check --cache .",
    "fmt": "pnpm run \"/^fmt:.*/\"",
    "fmt:es": "eslint --fix --cache",
    "fmt:css": "stylelint --fix --cache \"**/*.{css,astro}\"",
    "fmt:prettier": "prettier --write --cache .",
    "prepare": "husky"
  },
  "engines": {
    "node": ">=24"
  },
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "@astrojs/partytown": "^2.1.4",
    "@astrojs/rss": "^4.0.12",
    "@astrojs/sitemap": "^3.5.1",
    "@pagefind/modular-ui": "^1.4.0",
    "astro": "^5.13.5",
    "astro-decap-cms": "workspace:*",
    "mrmime": "^2.0.1",
    "pagefind": "^1.4.0",
    "postcss-html": "^1.8.0",
    "postcss-preset-env": "^10.3.1",
    "reading-time-estimator": "^1.14.0",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-external-links": "^3.0.0",
    "rehype-katex": "^7.0.1",
    "remark-math": "^6.0.0",
    "sharp": "^0.34.3",
    "typescript": "^5.9.2"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/ts-plugin": "^1.10.4",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/compat": "^1.3.2",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-astro": "^1.3.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "prettier": "^3.6.2",
    "prettier-plugin-astro": "^0.14.1",
    "stylelint": "^16.23.1",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-standard": "^39.0.0",
    "stylelint-define-config": "^16.22.0",
    "stylelint-prettier": "^5.0.3",
    "typescript-eslint": "^8.42.0"
  },
  "packageManager": "pnpm@10.15.1"
}
