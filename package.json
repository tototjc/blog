{
  "name": "astro-blog",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "build": "astro check && astro build",
    "preview": "astro preview",
    "check": "astro check",
    "lint": "pnpm run \"/^lint:.*/\"",
    "lint:es": "eslint",
    "lint:ts": "tsc --noEmit",
    "lint:css": "stylelint \"**/*.{css,astro}\"",
    "lint:prettier": "prettier . --check",
    "fmt": "pnpm run \"/^fmt:.*/\"",
    "fmt:es": "eslint --fix",
    "fmt:css": "stylelint --fix \"**/*.{css,astro}\"",
    "fmt:prettier": "prettier . --write",
    "prepare": "husky"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "browserslist": {
    "production": [
      "fully supports es6-module",
      "not dead"
    ],
    "development": [
      "last 1 versions"
    ],
    "ssr": [
      "maintained node versions"
    ]
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/rss": "^4.0.8",
    "@astrojs/sitemap": "^3.2.0",
    "astro": "^4.16.2",
    "astro-icon": "^1.1.1",
    "decap-cms": "^3.3.3",
    "postcss-preset-env": "^10.0.7",
    "reading-time": "^2.0.0-1",
    "rehype-external-links": "^3.0.0",
    "rehype-katex": "^7.0.1",
    "remark-math": "^6.0.0",
    "typescript": "5.6.3",
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@eslint/compat": "^1.2.0",
    "eslint": "^9.12.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-astro": "^1.2.4",
    "eslint-plugin-mdx": "^3.1.5",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "postcss-html": "^1.7.0",
    "prettier": "^3.3.3",
    "prettier-plugin-astro": "^0.14.1",
    "stylelint": "^16.10.0",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-standard": "^36.0.1",
    "stylelint-prettier": "^5.0.2",
    "typescript-eslint": "^8.8.1"
  },
  "packageManager": "pnpm@9.12.0"
}
